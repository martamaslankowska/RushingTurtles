<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pmma.rushingturtles">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_01"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_01"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.NameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity" />

        <activity android:name=".activities.GameActivity" />

        <activity android:name=".activities.InfoActivity"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.MainActivity">
        </activity>

    </application>

</manifest>